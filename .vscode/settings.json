{
    "search.exclude": {
        "**/target": true
    },
    "lldb.verboseLogging": true,
    "cSpell.words": [
        "Codespace",
        "Codespaces",
        "devcontainer",
        "devcontainers",
        "reqs",
        "rustc"
    ],
    "diffEditor.renderIndicators": true,

    // Editor
    "editor.accessibilitySupport": "off",
    "editor.autoClosingBrackets": "always",
    "editor.suggest.showStatusBar": true,
    "editor.fontFamily": "'JetBrains Mono', monospace",
    "editor.fontSize": 12,
    "editor.fontLigatures": true,
    "editor.letterSpacing": 0.3,
    "editor.smoothScrolling": true,
    "editor.lineNumbers": "on",
    "editor.minimap.maxColumn": 80,
    "editor.padding.top": 5,
    "editor.renderLineHighlight": "all",
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.roundedSelection": true,
    "editor.selectionHighlight": true, // TODO Is this something i want (Default is true)
  
    // Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",
  
    // Files
    "files.autoGuessEncoding": true,
    "files.autoSave": "onFocusChange",
    "files.autoSaveDelay": 10000,
    "files.defaultLanguage": "${activeEditorLanguage}",
  
    // GIT & Github
    "git.autofetch": true,
    "git.confirmSync": false,
    "githubPullRequests.remotes": ["origin"],
    "scm.defaultViewMode": "tree",
    "scm.providerCountBadge": "visible",
    
  
    // Terminal
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.tabs.enabled": true,
  
    // Disable Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
  
    //Window
    "window.menuBarVisibility": "classic",
    "window.title": "${rootName}${separator}${activeEditorMedium}${separator}${dirty}${separator}",
    "window.titleSeparator": " -*- ",
  
    // Workbench
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.editor.wrapTabs": true,
    "workbench.editor.restoreViewState": true,
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Palenight Theme",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "readme",
  
    // Zen Mode
    "zenMode.hideLineNumbers": false,
    "zenMode.restore": false,
  
    // ---------------------------------------------------------------------------------------------
    // Langages specific settings
    // ---------------------------------------------------------------------------------------------
  
    // Markdown
    "markdown.links.openLocation": "beside",
    "markdown.preview.fontSize": 16,
    // TODO Order theses commands
    "security.workspace.trust.untrustedFiles": "open",
    "json.maxItemsComputed": 500000,
    "todo-tree.general.tags": [
      "BUG",
      "HACK",
      "FIXME",
      "TODO",
      "XXX",
      "[ ]",
      "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "vsicons.dontShowNewVersionMessage": true,
    "[html]": {
      "editor.defaultFormatter": "vscode.html-language-features"
    },
    "accessibility.signals.terminalBell": {
      "sound": "on"
    },
    "terminal.integrated.enableVisualBell": true

  
}